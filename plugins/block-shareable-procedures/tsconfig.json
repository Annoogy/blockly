{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    // Point at the local Blockly. See #1934. Remove if we add hoisting.
    "paths": {
      "blockly/*": ["node_modules/blockly/*"]
    },
    "declaration": true, 
    "declarationMap": true
  },
  "include": [
    "src", "test"
  ],
}
