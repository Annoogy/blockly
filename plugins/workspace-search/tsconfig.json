{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    // Generate declaration maps
    "declarationMap": true,
    "moduleResolution": "nodenext",
    "lib": ["es2021", "dom"],
    // Point at the local Blockly. See #1934. Remove if we add hoisting.
    "paths": {
      "blockly/*": ["node_modules/blockly/*"]
    }
  },
  "include": [
    "src", "test"
  ],
}
